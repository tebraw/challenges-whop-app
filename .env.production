# PRODUCTION ENVIRONMENT CONFIGURATION
# Kopiere diese Werte in deine .env.local f√ºr echte Whop Integration

# PRODUCTION MODE
NODE_ENV=production

# WHOP OAUTH CREDENTIALS (ERFORDERLICH)
WHOP_OAUTH_CLIENT_ID=your_real_whop_client_id_here
WHOP_OAUTH_CLIENT_SECRET=your_real_whop_client_secret_here
WHOP_API_KEY=your_real_whop_api_key_here

# WHOP APP CONFIGURATION
NEXT_PUBLIC_WHOP_APP_ID=your_whop_app_id_here
NEXT_PUBLIC_WHOP_COMPANY_ID=your_whop_company_id_here

# PRODUCTION URL
NEXTAUTH_URL=https://yourdomain.com
WHOP_OAUTH_REDIRECT_URI=https://yourdomain.com/api/auth/whop/callback

# REVENUE SHARING
PLATFORM_FEE_PERCENTAGE=10

# OPTIONAL: WEBHOOK
WHOP_WEBHOOK_SECRET=your_webhook_secret

# =============================================
# SETUP ANLEITUNG:
# =============================================
# 
# 1. Gehe zu: https://dev.whop.com
# 2. Erstelle deine App
# 3. Konfiguriere:
#    - Redirect URI: https://yourdomain.com/api/auth/whop/callback
#    - Scopes: user:read, memberships:read
# 4. Kopiere deine Credentials hierher
# 5. Setze deine echte Domain
# 6. Deploy to Production!
#
# WICHTIG: Ohne diese Credentials funktioniert das System nicht!
