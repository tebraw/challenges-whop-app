// Environment variables for Whop Integration
// Add these to your .env.local file

# Whop API Configuration
WHOP_API_KEY=your_whop_api_key_here
WHOP_API_BASE_URL=https://api.whop.com
WHOP_WEBHOOK_SECRET=your_webhook_secret_here

# Whop App Configuration
WHOP_APP_ID=your_whop_app_id
WHOP_CLIENT_ID=your_whop_client_id
WHOP_CLIENT_SECRET=your_whop_client_secret

# Revenue Sharing Configuration
PLATFORM_FEE_PERCENTAGE=10
REVENUE_SHARING_ENABLED=true
TRANSPARENT_DISCLOSURE=true

# Subscription Tier Configuration
STARTER_TIER_PRICE=19
PROFESSIONAL_TIER_PRICE=49
ENTERPRISE_TIER_PRICE=79

# Webhook Configuration
WHOP_WEBHOOK_URL=https://yourdomain.com/api/whop/webhook

# Optional: Development/Testing
WHOP_SANDBOX_MODE=false
WHOP_TEST_API_KEY=your_test_api_key
