# Database
DATABASE_URL="postgresql://USER:PASSWORD@HOST:5432/DB?sslmode=require"

# Email Configuration (for winner notifications)
SMTP_HOST=smtp.gmail.com
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# App URL (for email links)
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Whop OAuth Configuration
WHOP_OAUTH_CLIENT_ID=your_whop_client_id_here
WHOP_OAUTH_CLIENT_SECRET=your_whop_client_secret_here
WHOP_OAUTH_REDIRECT_URI=http://localhost:3000/api/auth/whop/callback

# Whop API Key (for server-side operations)
WHOP_API_KEY=your_whop_api_key_here

# Whop Webhook Secret (for webhook verification)
WHOP_WEBHOOK_SECRET=your_whop_webhook_secret_here

# Production URLs (update for your domain)
# WHOP_OAUTH_REDIRECT_URI=https://yourdomain.com/api/auth/whop/callback

# Upload Configuration
UPLOAD_MAX_SIZE=5242880
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/gif,video/mp4,video/webm,application/pdf

# Development/Testing
NODE_ENV=development

DIRECT_URL="postgresql://USER:PASSWORD@HOST:5432/DB?sslmode=require"

# Whop Embedded App
NEXT_PUBLIC_WHOP_APP_ID=your_whop_app_id_here
NEXT_PUBLIC_WHOP_COMPANY_ID=your_whop_company_id_here
NEXT_PUBLIC_WHOP_AGENT_USER_ID=optional_agent_user_id

# Server-side
WHOP_API_KEY=your_whop_api_key_here
WHOP_WEBHOOK_SECRET=your_whop_webhook_secret_here
